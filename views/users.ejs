<%- include('partials/header') %>
<div class="row">
  <div class="col-12 col-md-10 mt-3 mx-auto">
    <div class="card">
      <div class="card-header text-center">
        <h3 class="card-title my-1">MongoDB Breads (Browse, Read, Edit, Add, Delete, Sort)</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-12 col-md-3 mb-3">
            <form action="" method="get" id="limitForm">
              <div class="input-group">
                <span class="input-group-text">Show</span>
                <select class="form-control text-center" name="limit" id="limit">
                  <option value="5" <%= limit == '5'? 'selected': '' %>>5</option>
                  <option value="10" <%= limit == '10'? 'selected': '' %>>10</option>
                  <option value="0" <%= limit == '0'? 'selected': '' %>>All</option>
                </select>
                <span class="input-group-text">Entries</span>
              </div>
            </form>
          </div>
          <div class="col-12 col-md-9 mb-3">
            <form action="" method="get" id="searchForm">
              <div class="input-group">
                <input type="text" class="form-control" name="search" id="search" placeholder="Search" value="<%= search %>" />
                <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                <a class="btn btn-warning" href="/" role="button"><i class="fa-solid fa-rotate"></i></a>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col" class="col-1">No.</th>
              <% const baseUrl = searchPage.replace(/&?sortBy=[^&]*/g, '').replace(/&?sortMode=[^&]*/g, ''); %>
              <% if (sortBy === 'name' && sortMode === 'asc') { %>
              <th scope="col" class="col-4 col-md-3">
                <a href="/?<%= baseUrl %>&sortBy=name&sortMode=desc" class="text-black text-decoration-none"><i class="fa-solid fa-sort-up me-2"></i>Name</a>
              </th>
              <% } else if (sortBy === 'name' && sortMode === 'desc') { %>
              <th scope="col" class="col-4 col-md-3">
                <a href="/?<%= baseUrl %>&sortBy=name&sortMode=asc" class="text-black text-decoration-none"><i class="fa-solid fa-sort-down me-2"></i>Name</a>
              </th>
              <% } else { %>
              <th scope="col" class="col-4 col-md-3">
                <a href="/?<%= baseUrl %>&sortBy=name&sortMode=asc" class="text-black text-decoration-none"><i class="fa-solid fa-sort me-2"></i>Name</a>
              </th>
              <% } %> <% if (sortBy === 'phone' && sortMode === 'asc') { %>
              <th scope="col" class="col-4 col-md-3">
                <a href="/?<%= baseUrl %>&sortBy=phone&sortMode=desc" class="text-black text-decoration-none"><i class="fa-solid fa-sort-up me-2"></i>Phone</a>
              </th>
              <% } else if (sortBy === 'phone' && sortMode === 'desc') { %>
              <th scope="col" class="col-4 col-md-3">
                <a href="/?<%= baseUrl %>&sortBy=phone&sortMode=asc" class="text-black text-decoration-none"><i class="fa-solid fa-sort-down me-2"></i>Phone</a>
              </th>
              <% } else { %>
              <th scope="col" class="col-4 col-md-3">
                <a href="/?<%= baseUrl %>&sortBy=phone&sortMode=asc" class="text-black text-decoration-none"><i class="fa-solid fa-sort me-2"></i>Phone</a>
              </th>
              <% } %>
              <th scope="col" class="col-3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((user, index) => { %>
            <tr>
              <td scope="row" class="col-1"><%= index + offset + 1 %></td>
              <td class="col-4 col-md-3"><%= user.name %></td>
              <td class="col-4 col-md-3"><%= user.phone %></td>
              <td class="col-3">
                <div class="d-flex flex-row">
                  <div class="m-1">
                    <button type="button" class="btn btn-success" onclick="showModel('edit','<%= user._id %>', '<%= user.name %>', '<%= user.phone %>')"><i class="fa-solid fa-pen"></i></button>
                  </div>
                  <div class="m-1">
                    <button type="button" class="btn btn-danger" onclick="showModel('delete','<%= user._id %>', '<%= user.name %>')"><i class="fa-solid fa-trash"></i></button>
                  </div>
                  <div class="m-1">
                    <a class="btn btn-warning" href="/users/<%= user._id %>/todos" role="button"><i class="fa-solid fa-right-to-bracket"></i></a>
                  </div>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="card-footer d-flex flex-column flex-md-row justify-content-between align-items-center">
        <button type="button" class="btn btn-primary mb-2 mb-md-0" onclick="showModel('add')">
          <i class="fa-regular fa-plus"></i>
        </button>
        <div class="d-flex flex-column flex-md-row align-items-center">
          <div class="me-3 mb-2 mb-md-0 text-center text-md-start">Showing <%= offset + 1 %> to <%= Math.min(offset + limit, total) %> of <%= total %> entries</div>
          <nav aria-label="Page navigation">
            <ul class="pagination mb-0 justify-content-center justify-content-md-start">
              <% if (total > 0 && pages > 1) { %>
              <!-- previous -->
              <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="/?<%= searchPage %>&page=<%= page - 1 %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>

              <!-- first page -->
              <li class="page-item <%= page === 1 ? 'active' : '' %>">
                <a class="page-link" href="/?<%= searchPage %>&page=1">1</a>
              </li>

              <!-- ellipsis before -->
              <% if (page > 3) { %>
              <li class="page-item disabled">
                <span class="page-link">...</span>
              </li>
              <% } %>

              <!-- page range around current page -->
              <% for (let i = Math.max(2, page - 1); i <= Math.min(pages - 1, page + 1); i++) { %>
              <li class="page-item <%= i === page ? 'active' : '' %>">
                <a class="page-link" href="/?<%= searchPage %>&page=<%= i %>"><%= i %></a>
              </li>
              <% } %>

              <!-- ellipsis after -->
              <% if (page < pages - 2) { %>
              <li class="page-item disabled">
                <span class="page-link">...</span>
              </li>
              <% } %>

              <!-- last page -->
              <li class="page-item <%= page === pages ? 'active' : '' %>">
                <a class="page-link" href="/?<%= searchPage %>&page=<%= pages %>"><%= pages %></a>
              </li>

              <!-- next -->
              <li class="page-item <%= page === pages ? 'disabled' : '' %>">
                <a class="page-link" href="/?<%= searchPage %>&page=<%= page + 1 %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
              <% } else { %>
              <!-- Single page case -->
              <li class="page-item active">
                <a class="page-link" href="#">1</a>
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="showModal" tabindex="-1" aria-labelledby="showModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showModalLabel">User Form</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="addEditForm" onsubmit="handleSubmit(event)">
        <div class="modal-body">
          <div class="row mb-3" id="formContent">
            <div class="col-md-3 align-self-center">
              <label for="nameFormModal">Name</label>
            </div>
            <div class="col-md-9 align-self-center">
              <input type="text" class="form-control" name="name" id="nameFormModal" placeholder="Insert your name" value="" autocomplete="off" />
            </div>
          </div>
          <div class="row mb-3" id="phoneContent">
            <div class="col-md-3 align-self-center">
              <label for="phoneFormModal">Phone</label>
            </div>
            <div class="col-md-9 align-self-center">
              <input type="text" class="form-control" name="phone" id="phoneFormModal" placeholder="Insert your phone" value="" autocomplete="off" />
            </div>
          </div>
          <div class="modal-body" id="deleteContent">
            <p>Apakah kamu yakin akan menghapus data '<span id="deleteItemName"></span>'?</p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          <button type="submit" class="btn btn-warning" id="saveButton">Save</button>
          <button type="button" class="btn btn-warning" id="deleteButton" onclick="handleDelete()">Yes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.getElementById("limit").addEventListener("change", function () {
    updateUrlParams({ limit: this.value });
  });

  document.getElementById("searchForm").addEventListener("submit", function (event) {
    event.preventDefault();
    const searchValue = document.getElementById("search").value;
    updateUrlParams({ search: searchValue, page: 1 });
  });

  function updateUrlParams(params) {
    const url = new URL(window.location.href);
    Object.keys(params).forEach((key) => url.searchParams.set(key, params[key]));
    window.location.href = url.toString();
  }

  let currentMode = "add";
  let currentUserId = "";

  const showModel = (mode, id = "", name = "", phone = "") => {
    currentMode = mode;
    currentUserId = id;
    const showModalLabel = document.getElementById("showModalLabel");
    const formContent = document.getElementById("formContent");
    const phoneContent = document.getElementById("phoneContent");
    const deleteContent = document.getElementById("deleteContent");
    const saveButton = document.getElementById("saveButton");
    const deleteButton = document.getElementById("deleteButton");

    if (mode === "edit" || mode === "add") {
      showModalLabel.innerText = mode === "edit" ? "Edit User" : "Add User";
      document.getElementById("nameFormModal").value = name;
      document.getElementById("phoneFormModal").value = phone;
      formContent.style.display = "block";
      phoneContent.style.display = "block";
      deleteContent.style.display = "none";
      saveButton.style.display = "block";
      deleteButton.style.display = "none";
    } else if (mode === "delete") {
      showModalLabel.innerText = "Delete Confirmation";
      document.getElementById("deleteItemName").innerText = name;
      formContent.style.display = "none";
      phoneContent.style.display = "none";
      deleteContent.style.display = "block";
      saveButton.style.display = "none";
      deleteButton.style.display = "block";
    }

    var showModal = new bootstrap.Modal(document.getElementById("showModal"));
    showModal.show();
  };

  const handleSubmit = async (event) => {
    event.preventDefault();
    const name = document.getElementById("nameFormModal").value;
    const phone = document.getElementById("phoneFormModal").value;

    const url = currentMode === "edit" ? `/${currentUserId}` : "/";
    const method = currentMode === "edit" ? "PUT" : "POST";

    try {
      const response = await fetch(url, {
        method: method,
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ name, phone }),
      });

      if (!response.ok) {
        throw new Error("Network response was not ok");
      }

      const result = await response.json();
      console.log(result);
      location.reload();
    } catch (error) {
      console.error("There was a problem with the fetch operation:", error);
    }
  };

  const showDeleteModal = (id, name) => {
    currentUserId = id;
    document.getElementById("deleteItemName").innerText = name;
    var deleteModal = new bootstrap.Modal(document.getElementById("deleteModal"));
    deleteModal.show();
  };

  const handleDelete = async () => {
    try {
      const response = await fetch(`/${currentUserId}`, {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
        },
      });

      if (!response.ok) {
        throw new Error("Network response was not ok");
      }

      const result = await response.json();
      console.log(result);
      location.reload();
    } catch (error) {
      console.error("There was a problem with the fetch operation:", error);
    }
  };
</script>
<%- include('partials/footer') %>